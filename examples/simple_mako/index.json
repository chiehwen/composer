{
    "filters": {
        "post": {
            "class": "composer.filters:MakoContainer",
            "kwargs": {"directories": ["."], "template": "post.mako"}
        }
    },
    "static": [
        {
            "url": "/static",
            "file": "static"
        }
    ],
    "routes": [
        {
            "context": {
                "title": "Hello"
            },
            "file": "foo.mako",
            "filters": [
                "mako"
            ],
            "url": "foo"
        },
        {
            "context": {
                "title": "Goodbye!"
            },
            "file": "posts/1.md",
            "filters": [
                "markdown",
                "post"
            ],
            "url": "post/1"
        }
    ]
}
